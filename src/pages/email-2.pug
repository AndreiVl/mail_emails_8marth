<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
html(lang="ru" xmlns="http://www.w3.org/1999/xhtml" xmlns:v="urn:schemas-microsoft-com:vml" xmlns:o="urn:schemas-microsoft-com:office:office" style="min-height: 100vh;")
	include include/head.pug
	+head('email-2')

	body(style="width: 100%; padding: 0; Margin: 0; min-height: 100vh;")
		include ../blocks-ui-components/ui-components-mixins.pug			
		include ../blocks/mixins.pug						
		<!-- BODY -->
		table(align="center" bgcolor=bg_table border="0" cellpadding="0" cellspacing="0" width="100%" style="min-height: 100vh;")
			tr 
				td(align="center" valign="top" style="vertical-align: top;")
					table(align="center" border="0" cellpadding="0" cellspacing="0" width="100%")
						tr
							+td-margin({height: mr_body })
						tr
							td(align="center")
								<!-- PREHEADERS STARTS -->
								+preheaders({preheaders2: true})
								<!-- PREHEADERS ENDS -->
						tr
							td(align="center")
								<!-- HEADER STARTS -->
								+header({header2: true})
								<!-- HEADER ENDS -->
						tr 
							td(align="center")
								<!-- BANNER STARTS -->
								+banner({
									name: 'img',
									arg: {
										link: '#',
										img_link: '8marth-banner-530-280-01.jpg',
										alt: 'banner',
										width: '530',
										height: '280'
									}
								})
								<!-- BANNER ENDS -->
						tr
							td(align="center")
								<!-- TITLE STARTS -->
									+row({
										col: 1,
										bg_body: bg_body,
										body_pading_l: body_pading_l,
										body_pading_r: body_pading_r,
										body_width: body_width,
										rtl: false,
										margin_top: mr_mediumblue,
										margin_bottom: mr_violet,
										content: {
											name: 'title-two',
											arg: {
												title: 'Посетите наш блог',
												alignment: 'center'
											}
										}
									})
								<!-- TITLE ENDS -->
						tr
							td(align="center")
								<!-- DESC-LIST STARTS -->
								+desc-list({})
								<!-- DESC-LIST ENDS -->
						tr
							td(align="center")
								<!-- SOCIALS STARTS -->
								+socials({social: true})
								<!-- SOCIALS ENDS -->
						tr
							td(align="center")
								<!-- STORES STARTS -->
								+footer({})
								<!-- STORES ENDS -->
						tr
							+td-margin({height: mr_body })
		<!-- /BODY -->