mixin card-gorizontal(data)
	+row({
		col: 2,
		bg_body: bg_body,
		body_pading_l: body_pading_l,
		body_pading_r: body_pading_r,
		body_width: col_body_width,
		rtl: false,
		margin_top: mr_lightblue,
		margin_top_class: false,
		margin_bottom: mr_violet,
		content: {
			colWidth: td_2_col_width,
			colPadding: '10px 10px',
			valing_right: 'middle',
			valing_left: 'middle',
			col2_left: {
				name: 'img-wraper',
				arg: {
					img: '8marth-img-card-220-220-01.jpg',
					alt: 'cosmetics',
					width: '220',
					height: '220'
				}
			},
			col2_right: {
				name: 'text',
				arg: [
					{
						type: 'text',
						class: 'h2',
						text: 'ONNE',
						alignment: 'center'
					},
					{
						type: 'margin',
						margin: mr_crayola
					},
					{
						type: 'text',
						class: 'text text--grey',
						text: 'Средства для ухода за телом',
						alignment: 'center'
					},
					{
						type: 'margin',
						margin: mr_darkblue
					},
					{
						type: 'content',
						alignment: 'center',
						name: 'btn',
						arg: {
							link: '#',
							img: '8marth-btn-84-36-01.png',
							width: 84,
							height: 36
						}
					},
					{
						type: 'margin',
						margin: mr_purpur
					},
				]
			}
		}
	})